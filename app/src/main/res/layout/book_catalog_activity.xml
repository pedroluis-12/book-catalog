<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".app.BookCatalogActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/list_item_book_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:fontFamily="@font/book_catalog_roboto_bold"
        android:textColor="@color/book_catalog_color_56504C"
        android:textSize="28sp"
        android:text="@string/app_name" />

    <FrameLayout
        android:id="@+id/book_catalog_list_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.appcompat.widget.LinearLayoutCompat>